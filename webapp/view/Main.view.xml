<mvc:View controllerName="ap.customerapplication.controller.Main"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Page id="page">
        <content>
            <Table
                id="customersTable"
                items="{/CustomerSet}"
            >
            <headerToolbar>
				<OverflowToolbar>
					<Title text="Customers" level="H2"/>
					<ToolbarSpacer/>
					<Button
						tooltip="Sort"
						icon="sap-icon://sort"
						press="handleSortButtonPressed"/>
					<Button
						tooltip="Filter"
						icon="sap-icon://filter"
						press="handleFilterButtonPressed"/>
					
				</OverflowToolbar>
			</headerToolbar>
                <columns>
                    <Column
                        id="kunnrCol"
                        width="12em"
                    >
                        <VBox>
                            <Text text="Kunnr" />
                            <Text text="Name" />
                        </VBox>
                    </Column>
                    <Column
                        id="custcountryCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Country" />
                    </Column>
                    <Column
                        id="custcityCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="City" />
                    </Column>
                    <Column
                        id="custpostalcodeCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Postal Code" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" vAlign="Middle" press=".onListItemPress">
                        <cells>
                            <ObjectIdentifier
                                title="{Name}"
                                text="{Kunnr}"
                            />
                            <Text text="{Country}" />
                            <Text text="{City}" />
                            <Text text="{Postalcode}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
