<mvc:View controllerName="ap.customerapplication.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:f="sap.f"
	height="100%" >
    <!--<App id="app">-->
    <f:FlexibleColumnLayout
        id="fcl"
        backgroundDesign="Solid"
    >
        <f:beginColumnPages>
            <mvc:XMLView
                id="beginView"
                viewName="ap.customerapplication.view.Main"
            />
        </f:beginColumnPages>
        <f:midColumnPages>
            <mvc:XMLView
                id="detailView"
                viewName="ap.customerapplication.view.CustomerDetail"
            />
        </f:midColumnPages>
    </f:FlexibleColumnLayout>
    <!--</App>-->
</mvc:View>
